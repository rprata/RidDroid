<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ScrollView android:id="@+id/ScrollView1"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="fill_parent">
			<TextView android:id="@+id/textInicial"
				android:layout_width="wrap_content" android:textSize="40dip"
				android:text="Aluno Mobile" android:layout_marginTop="50dip"
				android:layout_height="wrap_content" android:layout_gravity="center"
				android:textStyle="bold"></TextView>
			<TextView android:id="@+id/subtext" android:layout_width="wrap_content"
				android:textSize="10dip" android:text="Consulte suas disciplinas em curso"
				android:layout_marginTop="10dip" android:layout_height="wrap_content"
				android:layout_gravity="center" android:textStyle="bold"></TextView>
			<ImageView android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:layout_marginTop="5dip"
				android:scaleType="center" android:src="@drawable/logouerj"
				android:id="@+id/imageView1"></ImageView>
			<TextView android:layout_height="wrap_content" android:text="Digite sua matrÃ­cula:"
				android:layout_marginTop="5dip" android:layout_width="wrap_content"
				android:textStyle="bold" android:textSize="13dip"
				android:layout_gravity="center" />
			<AutoCompleteTextView android:id="@+id/matricula" android:layout_width="150dip"
				android:layout_height="wrap_content" android:layout_gravity="center"
				android:inputType="number">
			</AutoCompleteTextView>
			<Button android:text="Enviar" android:id="@+id/enviar"
				android:layout_marginTop="10dip" android:layout_width="120dip"
				android:layout_height="80dip" android:layout_gravity="center_horizontal"></Button>
		</LinearLayout>
	</ScrollView>
</LinearLayout>